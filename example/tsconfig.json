{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "lib": ["es5", "es6", "es7", "dom"],
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "jsx": "react"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist", "example"]
}
