{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es6",
    "lib": ["es5", "es6", "es7", "dom"],
    "removeComments": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example"
  ]
}
